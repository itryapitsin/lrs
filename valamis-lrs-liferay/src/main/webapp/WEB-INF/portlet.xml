<portlet-app version="2.0"
             xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

    <portlet>
        <portlet-name>LrsClients</portlet-name>
        <portlet-class>com.arcusys.valamis.lrs.liferay.portlet.LrsAppsView</portlet-class>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <portlet-info>
            <title>Valamis TinCan API Client Manager</title>
        </portlet-info>
    </portlet>

    <portlet>
        <portlet-name>LrsMode</portlet-name>
        <portlet-class>com.arcusys.valamis.lrs.liferay.portlet.LrsModeView</portlet-class>
        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>view</portlet-mode>
        </supports>
        <portlet-info>
            <title>Valamis LRS Mode</title>
        </portlet-info>
    </portlet>
</portlet-app>